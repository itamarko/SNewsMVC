@model IEnumerable<SNewsMVC.Models.Category.CategoryViewModel>

@if (Model != null)
{
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>

                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>@r.Description</td>
                </tr>
            }
        </tbody>
    </table>
} 